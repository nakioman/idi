<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="idiFrameworkSection" type="IDI.Framework.Configuration.IDIFrameworkSection, IDI.Framework"/>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>
  <idiFrameworkSection>
    <speechRecognition culture="es" name="IDI" useKinectAudioSource="False" minConfidence="0.6"/>
    <!--<speechSynthesizer name="Microsoft Anna"/>-->
    <speechSynthesizer name="Microsoft Server Speech Text to Speech Voice (es-ES, Helena)" />
  </idiFrameworkSection>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>
  <log4net>
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="log.txt" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date %-5level %logger - %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="ALL" />
      <appender-ref ref="RollingFileAppender" />
    </root>
  </log4net>
</configuration>
